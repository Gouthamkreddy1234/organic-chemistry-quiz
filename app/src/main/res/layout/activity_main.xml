
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:background="#ffffff"
    android:id="@+id/ll2"
    android:weightSum="100">

        <include layout="@layout/toolbar_layout"
            android:id="@+id/app_bar">
        </include>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:weightSum="100"
        android:elevation="2dp">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"

            android:background="#26A69A"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Question"
            android:id="@+id/question"
            android:layout_gravity="top"
            android:textColor="@android:color/white"
            android:textStyle="italic"

            android:padding="5dp"/>

            </ScrollView>

          <!-- <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/timer"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:textStyle="italic"

                android:padding="5dp"/>-->

        </LinearLayout>

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/progresbar"
                    />
            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="#ffffff">
   <com.melnykov.fab.ObservableScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:visibility="visible"
       android:id="@+id/scrollview"
       android:background="#ffffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#ffffff"
            android:paddingBottom="3dp"
            android:layout_marginTop="10dp"
             >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/questionimage"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/questionimage2"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/questionimage3"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/questionimage4"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

           <!-- <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#c0c0c0"/>-->



                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/t1"
                    android:textColor="@android:color/black"
                    android:buttonTint="@android:color/black"
                    android:text=""/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:paddingLeft="15dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:adjustViewBounds="true"
                    android:id="@+id/v1"/>





                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/t2"
                    android:textColor="@android:color/black"
                    android:buttonTint="@android:color/black"
                    android:text=""/>

            <!--for <21 it will be grey in color-->

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:paddingLeft="15dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:id="@+id/v2"/>





                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/t3"
                    android:textColor="@android:color/black"
                    android:buttonTint="@android:color/black"
                    android:text=""/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:paddingLeft="15dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:id="@+id/v3"/>





                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/t4"
                    android:buttonTint="@android:color/black"
                    android:textColor="@android:color/black"
                    android:text=""/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:paddingLeft="15dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"

                    android:id="@+id/v4"/>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="80"
                android:layout_gravity="bottom"

                android:weightSum="100"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:gravity="bottom"
                    android:layout_weight="50">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Correct : 0"
                    android:textColor="#26A69A"
                    android:id="@+id/tcorrect" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Incorrect : 0"
                    android:textColor="@android:color/holo_red_dark"
                    android:id="@+id/incorrect" />

                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Total :  0"
                    android:textColor="#263238"
                    android:id="@+id/tot" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50">


                </LinearLayout>
                </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                >


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
   </com.melnykov.fab.ObservableScrollView>

                <com.melnykov.fab.FloatingActionButton
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="25dp"
                    android:src="@drawable/ic_arrow_forward_white"
                    fab:fab_colorNormal="#81C784"
                    fab:fab_colorPressed="#76FF03"
                    fab:fab_colorRipple="#B2FF59" />

            </FrameLayout>


        </LinearLayout>


            <at.markushi.ui.CircleButton
                android:layout_width="64dip"
                android:layout_height="64dip"

                app:cb_color="#99CC00"
                android:layout_gravity="right"
                android:layout_marginRight="25dp"
                android:layout_marginTop="150dp"
                app:cb_pressedRingWidth="8dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/timer"
                android:textColor="@color/white"
                android:layout_gravity="right"
                android:layout_marginRight="52dp"
                android:layout_marginTop="174dp"/>
        </FrameLayout>
    </android.support.v7.widget.CardView>

        </LinearLayout>



</android.support.v4.widget.DrawerLayout>